{
  "package": {
    "productName": "LeagueRecord",
    "version": "1.15.5"
  },
  "build": {
    "distDir": "../src-web",
    "devPath": "../src-web",
    "withGlobalTauri": true
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": [
        "msi"
      ],
      "identifier": "fx.LeagueRecord",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "./libobs/",
        "./licenses/*"
      ],
      "copyright": "gpl-2.0",
      "category": "Utility",
      "shortDescription": "Record and review LoL games",
      "longDescription": "Record and review League of Legends games",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "exceptionDomain": "",
        "signingIdentity": null,
        "providerShortName": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": false
    },
    "allowlist": {
      "shell": {
        "open": ""
      },
      "window": {
        "setTitle": true,
        "setFullscreen": true
      }
    },
    "windows": [
      {
        "title": "LeagueRecord",
        "minWidth": 800,
        "minHeight": 400,
        "width": 1200,
        "height": 650,
        "center": true,
        "resizable": true,
        "visible": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}