{
  "package": {
    "productName": "LeagueRecord"
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": [
        "msi"
      ],
      "identifier": "fx.LeagueRecord",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": {
        "./libobs/": "./libobs/",
        "../licenses/": "./licenses/",
        "../LICENSE.txt": "./"
      },
      "category": "Utility",
      "shortDescription": "Record and review LoL games",
      "longDescription": "Record and review League of Legends games",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "exceptionDomain": "",
        "signingIdentity": null,
        "providerShortName": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": false
    },
    "allowlist": {
      "shell": {
        "open": ""
      },
      "window": {
        "setTitle": true,
        "setFullscreen": true
      },
      "path": {
        "all": true
      },
      "protocol": {
        "asset": true,
        "assetScope": [
          "**"
        ]
      }
    },
    "windows": [
      {
        "title": "LeagueRecord",
        "minWidth": 800,
        "minHeight": 400,
        "width": 1200,
        "height": 650,
        "center": true,
        "resizable": true,
        "visible": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}