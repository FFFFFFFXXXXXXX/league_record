{
  "package": {
    "productName": "LeagueRecord",
    "version": "1.3.2"
  },
  "build": {
    "distDir": "../src-web",
    "devPath": "../src-web",
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "withGlobalTauri": true
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "fx.league_record",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "./libobs/data/",
        "./libobs/obs-plugins/",
        "./licenses/*",
        "./settings/*"
      ],
      "externalBin": [
        "./libobs/obs-ffmpeg-mux",
        "./static-file-server"
      ],
      "copyright": "gpl-2.0",
      "category": "Utility",
      "shortDescription": "Record and replay League of Legends",
      "longDescription": "Record and replay League of Legends",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "exceptionDomain": "",
        "signingIdentity": null,
        "providerShortName": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": false
    },
    "allowlist": {
      "path": {
        "all": true
      },
      "shell": {
        "open": ""
      },
      "window": {
        "setTitle": true,
        "setFullscreen": true
      },
      "dialog": {
        "confirm": true
      }
    },
    "windows": [
      {
        "title": "League Record",
        "width": 1298,
        "height": 702,
        "resizable": true,
        "center": true,
        "visible": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": null
    }
  }
}